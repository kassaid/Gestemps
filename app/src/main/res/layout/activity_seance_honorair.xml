<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cnam.mobile.gestemps.Trajet">



    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/prenomPersView"
                android:text="Prénom personne"
                android:layout_below="@+id/titreView"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/nomPersView"
                android:text="Nom"
                android:layout_below="@+id/prenomPersView"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tarifView"
                android:text="tarif horaire"
                android:layout_below="@+id/nomPersView"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/dureeRdvView"
                android:text="durée prévue du rdv"
                android:layout_below="@+id/tarifView"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/soldeView"
                android:text="solde"
                android:layout_below="@+id/dureeRdvView"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/dureeSeanceView"
                android:text="durée de la séance"
                android:layout_below="@+id/soldeView"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/montantSeanceView"
                android:text="montant de la séance"
                android:layout_below="@+id/dureeSeanceView"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                />
            <EditText
                android:id="@+id/paiementEdit"
                android:hint="Paiement reçu (euros)"
                android:inputType="number"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/montantSeanceView" />

            <Button
                android:id="@+id/btnValider"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Valider"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/montantSeanceView"
                android:layout_gravity="center_horizontal"
                />

            <Button
                android:id="@+id/btnQuitter"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Quitter"
                android:layout_below="@+id/btnTerminer"
                android:layout_gravity="center_horizontal"
                />






        </LinearLayout>
    </ScrollView>
</LinearLayout>
