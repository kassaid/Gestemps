<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cnam.mobile.gestemps.RdvCreation">

    <TextView
        android:id="@+id/titreView"
        android:text="Tous les champs sont obligatoires sauf le commentaire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">



            <Spinner
                android:id="@+id/personneSpinner"
                android:hint="Nom de la personne"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="40dp"
                android:layout_below="@+id/libEdit"
                />

            <EditText
                android:id="@+id/prenomEdit"
                android:hint="Prénom"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/personneSpinner" />

            <EditText
                android:id="@+id/adresseEdit"
                android:hint="Adresse du RDV"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/personneSpinner" />

            <EditText
                android:id="@+id/dateEdit"
                android:hint="Date"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/adresseEdit" />

            <EditText
                android:id="@+id/horaireEdit"
                android:hint="Horaire"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/dateEdit" />

            <EditText android:id="@+id/dureeEdit"
                android:hint="Durée prévue (heure)"
                android:inputType="number"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/horaireEdit" />


            <Spinner
                android:id="@+id/niveauSpinner"
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/dureeEdit"
                />


            <EditText
                android:id="@+id/tarifEdit"
                android:hint="Tarif horaire (euros)"
                android:inputType="number"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/niveauSpinner" />

            <EditText
                android:id="@+id/infoEdit"
                android:hint="Commentaire"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tarifEdit" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/bt_valider"
                android:id="@+id/button1"
                android:layout_marginTop="20dp"
                android:layout_below="@id/infoEdit" />

            <Button
                android:id="@+id/button2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/bt_annuler"
                android:layout_below="@id/button1"
                android:layout_centerHorizontal="true" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
