<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cnam.mobile.gestemps.Trajet">


<TextView
        android:id="@+id/titreView"
        android:text="GESTEMPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/prenomPersView"
        android:text="Prénom personne"
        android:layout_below="@+id/titreView"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/nomPersView"
        android:text="Nom"
        android:layout_below="@+id/prenomPersView"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/timeView"
        android:text="Heure-minute"
        android:layout_below="@+id/nomPersView"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/niveauRdvView"
        android:text="niveau du rdv"
        android:layout_below="@+id/timeView"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/dureeRdvView"
        android:text="durée prévue du rdv"
        android:layout_below="@+id/niveauRdvView"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/pointDebRdvView"
        android:text="pointage de début"
        android:layout_below="@+id/dureeRdvView"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/pointFinRdvView"
        android:text="pointage de fin"
        android:layout_below="@+id/pointDebRdvView"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/dureeSeanceView"
        android:text="durée de la séance"
        android:layout_below="@+id/niveauSeanceView"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:id="@+id/btnSeanceNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="séance suivante"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/pointDebRdvView"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:id="@+id/btnSeanceNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="séance non prévue"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btnTerminer"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:id="@+id/btnListeRdv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="liste des rdv"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btnTerminer"
        android:layout_gravity="center_horizontal"
        />


</LinearLayout>
